{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "plugins": [
      { "name": "@nestjs/swagger/plugin", "options": { "classValidatorShim": true, "introspectComments": true } }
    ]
  },
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
